global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log global
    mode tcp
    option tcplog
    timeout connect 5000
    timeout client 50000
    timeout server 50000

{% for port in haproxy_ports %}
frontend ft_{{ port }}
    bind *:{{ port }}
    default_backend bk_{{ port }}

backend bk_{{ port }}
    server target_{{ port }} {{ haproxy_target_ip }}:{{ port }}

{% endfor %}
